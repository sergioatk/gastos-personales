<div class="row">
  <div class="col cuadro">

    {{#if data}}

    <h2>Last 10 Movements</h2>

    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Fecha</th>
          <th scope="col">Tipo</th>
          <th scope="col">Concepto</th>
          <th scope="col">Monto</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody></tbody>

      {{#each data}}




      <tr>
        <th scope="row">{{movement_date}}</th>
        <td>{{movement_type}}</td>
        <td>{{movement_description}}</td>
        <td>{{movement_amount}}</td>
        <td>
          <button class="http-request btn btn-danger" data-method="DELETE"
            data-url="http://localhost:3000/movements/{{id}}">DELETE</button>
          <a class="btn btn-warning toggle-edit-form" href="http://localhost:3000/movements/edit/{{id}}">EDIT</a>
        </td>

     <tr>
       <form action="">
       <th>
         <label for="new-date-{{id}}"></label>
         <input type="date" name="new-date-{{id}}" id="new-date-{{id}}" required>
       </th>
       <td>es una</td>
       <td>prueba</td>
       </form>
     </tr>
     
       
      



      {{/each}}

      </tbody>
    </table>






    {{else}}



    <h2>There's no movements to show</h2>






    {{/if}}



  </div>



</div>
